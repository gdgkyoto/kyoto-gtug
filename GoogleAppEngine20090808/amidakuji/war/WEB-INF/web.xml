<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">

	<!--==================== servlets ====================-->
	<servlet>
		<servlet-name>Amidakuji</servlet-name>
		<servlet-class>com.kyotogtug.amidakuji.controller.AmidakujiServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Get Amida Data</servlet-name>
		<servlet-class>com.kyotogtug.amidakuji.controller.AmidaDataAjaxServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Put Line</servlet-name>
		<servlet-class>com.kyotogtug.amidakuji.controller.PutLineAjaxServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>TestServlet</servlet-name>
		<servlet-class>com.kyotogtug.amidakuji.TestAmidakujiServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MakeAmida</servlet-name>
		<servlet-class>com.kyotogtug.amidakuji.MakeAmidaServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MakeAmida</servlet-name>
		<url-pattern>/MakeAmida</url-pattern>
	</servlet-mapping>



	<!--==================== servlet-mappings ====================-->
	<servlet-mapping>
		<servlet-name>Amidakuji</servlet-name>
		<url-pattern>/amidakuji</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Get Amida Data</servlet-name>
		<url-pattern>/getAmidaData</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Put Line</servlet-name>
		<url-pattern>/putLine</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TestServlet</servlet-name>
		<url-pattern>/test</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MakeAmida</servlet-name>
		<url-pattern>/MakeAmida</url-pattern>
	</servlet-mapping>

	<!--==================== welcome-file-list ====================-->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
